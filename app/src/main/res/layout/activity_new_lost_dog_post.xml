<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/new_lost_dog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        tools:context=".view.NewLostDogPost">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/lostDog_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Report New Lost Dog"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lostDog_toolbar_text" app:layout_constraintStart_toStartOf="@+id/lostDog_toolbar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/lostDog_toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/lostDog_toolbar"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/default_dog"
            android:id="@+id/lostDog_pic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_toolbar"/>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lostDog_name_til"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_pic"
            android:layout_marginStart="30dp"
            android:hint="Dog Name"
            android:imeOptions="actionNext"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/lostDog_name_et"
                android:imeOptions="actionNext"
                android:lines="1"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/lostDog_lastSeen_til"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_name_til"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:inputType="text"
            android:hint="Last Seen (Location)" android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/lostDog_lastSeen_et"
                android:imeOptions="actionNext"
                android:lines="1"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/lostDog_contact"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_lastSeen_til"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Contact Number"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/lostDog_contact_et"
                android:imeOptions="actionNext"
                android:lines="1"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:gravity="start"
            android:id="@+id/lostDog_desc"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:imeOptions="actionDone"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_contact"
            android:hint="Additional Information">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/lostDog_desc_et"
                android:imeOptions="actionDone"
                android:textSize="20sp"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:text="Done"
            android:layout_width="0dp"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:id="@+id/lostDog_postButton"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/lostDog_toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lostDog_toolbar_text"
            app:layout_constraintBottom_toBottomOf="@+id/lostDog_toolbar" android:layout_marginStart="10dp"/>
    <ImageButton
            android:layout_width="30dp"
            android:background="@android:color/transparent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_menu_gallery"
            android:id="@+id/lostDog_selectImage"
            app:layout_constraintEnd_toEndOf="@+id/lostDog_pic"
            app:layout_constraintBottom_toBottomOf="@+id/lostDog_pic"/>

</androidx.constraintlayout.widget.ConstraintLayout>