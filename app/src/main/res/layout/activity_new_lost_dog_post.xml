<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.NewLostDogPost">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/lostDog_toolbar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Report New Lost Dog"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lostDog_toolbar_text" app:layout_constraintStart_toStartOf="@+id/lostDog_toolbar"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/lostDog_toolbar"
            app:layout_constraintBottom_toBottomOf="@+id/lostDog_toolbar"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/lostDog_pic"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_toolbar"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lostDog_name"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_pic" app:layout_constraintStart_toEndOf="@+id/lostDog_nametv"
            android:layout_marginStart="10dp" android:hint="Dog Name"/>
    <TextView
            android:text="Dog Name:"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lostDog_nametv" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/lostDog_pic"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/lostDog_lastSeen" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintStart_toEndOf="@+id/dogPoster_lastSeentv"
            android:layout_marginStart="8dp" android:inputType="text" android:hint="Last Seen"/>
    <TextView
            android:text="Last Seen: "
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dogPoster_lastSeentv" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/lostDog_nametv"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/lostDog_contact" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_lastSeen" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/lostDog_contacttv"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.68"
            android:hint="Contact Number"/>
    <TextView
            android:text="Contact :"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lostDog_contacttv" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/dogPoster_lastSeentv"/>
    <TextView
            android:text="Detail Description:"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lostDog_desctv" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_contacttv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/lostDog_desc"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_desctv"/>
    <Button
            android:text="Post Lost Dog Notice"
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:id="@+id/lostDog_postButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/lostDog_desc" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="30dp"
            android:background="@android:color/transparent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_menu_gallery"
            android:id="@+id/lostDog_selectImage"
            app:layout_constraintEnd_toEndOf="@+id/lostDog_pic"
            app:layout_constraintBottom_toBottomOf="@+id/lostDog_pic"/>

</androidx.constraintlayout.widget.ConstraintLayout>