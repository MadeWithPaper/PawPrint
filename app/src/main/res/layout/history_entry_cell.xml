<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent"
        android:maxHeight="100dp">
    <ImageView
            android:layout_width="100dp"
            android:layout_height="0dp"
            tools:src="@drawable/default_dog"
            android:id="@+id/historyPic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:drawableStart="@drawable/collar_icon"
            android:drawablePadding="5dp"
            android:text="TextView"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:id="@+id/historyName" app:layout_constraintStart_toEndOf="@+id/historyPic"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/location_icon"
            android:drawablePadding="5dp"
            android:id="@+id/historyLastSeen" app:layout_constraintStart_toEndOf="@+id/historyPic"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/historyName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>