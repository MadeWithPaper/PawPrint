<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FoodRecallAdapter"
        android:background="#fff"
        android:maxHeight="100dp">
    <TextView
            android:text="Brand:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recallBrand_TV"
            android:textSize="15sp"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:layout_marginTop="5dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/recallDate_TV" android:layout_marginEnd="10dp"/>
    <TextView
            android:text="Problem:"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="15sp"
            android:textColor="#000"
            android:id="@+id/recallProblem_TV" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/recallProduct_TV" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Product:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/recallProduct_TV"
            android:textSize="15sp"
            android:textColor="#000"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="5dp" android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/recallBrand_TV"
            app:layout_constraintEnd_toStartOf="@+id/recallDate_TV"
            android:layout_marginEnd="10dp" app:layout_constraintHorizontal_bias="0.031"/>
    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:id="@+id/recallDate_TV" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>