<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DogPosterDetailView">

    <HorizontalScrollView
            android:id="@+id/detailHorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scrollbars="horizontal"
            android:orientation="horizontal"
            android:scrollbarAlwaysDrawHorizontalTrack="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
                android:id="@+id/detailImageGallery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"/>
    </HorizontalScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:fabSize="auto"
            android:visibility="invisible"
            app:srcCompat="@drawable/location_off_icon"
            android:id="@+id/dogPosterDetail_foundFAB"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom|end"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/phone_icon"
            android:id="@+id/dogPosterDetail_phoneFAB"
            android:layout_marginEnd="12dp" app:layout_constraintEnd_toStartOf="@+id/dogPosterDetail_messageFAB"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/detailHorizontalScrollView"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/message_icon"
            android:id="@+id/dogPosterDetail_messageFAB"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/detailHorizontalScrollView"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/detailHorizontalScrollView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/dogPosterDetailForm">
        <TextView
                android:drawableStart="@drawable/collar_icon"
                android:drawablePadding="5dp"
                android:text="@string/name_tf_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:id="@+id/dogPosterDetailNameTV"
                android:textSize="20sp"
                android:textColor="#000"
                android:textAlignment="viewStart"/>
        <TextView
                android:drawableStart="@drawable/phone_icon"
                android:drawablePadding="5dp"
                android:text="Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:id="@+id/dogPosterDetailNumberTV"
                android:textSize="20sp"/>
        <TextView
                android:text="Loc"
                android:drawableStart="@drawable/location_icon"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:id="@+id/dogPosterDetailLocTV"
                android:textSize="20sp"/>
        <TextView
                android:text="Additional Information:"
                android:drawableStart="@drawable/info_icon"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="10dp"
                android:textColor="#000"
                android:id="@+id/dogPosterDetailDesc"
                android:textSize="20sp"/>
        <TextView
                android:paddingStart="40dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dogPosterDetailDescTV"
                android:textSize="20sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>