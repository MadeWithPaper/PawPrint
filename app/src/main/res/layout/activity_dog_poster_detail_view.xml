<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.DogPosterDetailView">

    <androidx.appcompat.widget.Toolbar
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/dogPosterDetailToolbar"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="25sp"
            android:id="@+id/dogPosterDetailToolbarTV" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/dogPosterDetailToolbar" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/dogPosterDetailToolbar"
            app:layout_constraintBottom_toBottomOf="@+id/dogPosterDetailToolbar"/>

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/dogPosterDetail_pic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dogPosterDetailToolbar"
            android:layout_marginTop="5dp" android:layout_marginStart="5dp"/>
    <TextView
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dogPosterDetail_lastSeentv"
            android:layout_marginStart="30dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:verticalScrollbarPosition="right"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dogPosterDetail_pic" android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.036"
            android:layout_marginTop="20dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/dogPosterDetail_DescRV" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/dogPosterDetail_lastSeentv" android:layout_marginBottom="50dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dogPosterDetail_NumberTV" app:layout_constraintStart_toEndOf="@+id/dogPosterDetail_pic"
            android:layout_marginStart="10dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/dogPosterDetailToolbar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>