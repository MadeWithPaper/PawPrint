    <TextView
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/dogPoster_lastSeentv"
            android:layout_marginStart="30dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:verticalScrollbarPosition="right"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dogPosterDetail_NumberTV"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:id="@+id/dogPosterDetail_DescTV"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/dogPoster_lastSeentv"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:textAlignment="viewStart"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/dogPosterDetailFAB_found"/>
    <TextView
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_height="wrap_content"
            android:id="@+id/dogPosterDetail_NumberTV"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dogDetailView"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:fabSize="auto"
            android:visibility="invisible"
            app:srcCompat="@drawable/location_off_icon"
            android:id="@+id/dogPosterDetailFAB_found"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom|end"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/phone_icon"
            android:id="@+id/dogPosterDetail_phoneFAB"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/dogPosterDetail_messageFAB"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/dogDetailView"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/message_icon"
            android:id="@+id/dogPosterDetail_messageFAB"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/dogDetailView"/>

